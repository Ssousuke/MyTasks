@model MyTasks.Dto.Dto.ProjectDto
@using MyTasks.Domain.Entities.Auxiliar.Enum
@{
    ViewData["Title"] = "Create new project";
}

<div class="container py-5 bg-white text-dark">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <div class="card p-4">
                <div class="card-body">
                    <h2 class="text-center mb-4"><i class="fa-solid fa-pen-to-square"></i> Criar novo projeto</h2>
                    <form asp-action="CreateNewProject" method="post">
                        <div class="form-group mb-2">
                            <label>Nome</label>
                            <input asp-for="ProjectName" class="form-control" />
                        </div>

                        <div class="form-group mb-2">
                            <label>Descrição</label>
                            <textarea asp-for="ProjectDescription" class="form-control"></textarea>
                        </div>

                        <div class="form-group mb-2">
                            <label>Etapa do projeto</label>
                            @{
                                var enums = Html.GetEnumSelectList<ProjectStep>().ToList();
                            }
                            <select asp-for="ProjectStep" asp-items="@enums" class="form-control">
                                <option>Selecione um passo do projeto</option>
                            </select>
                        </div>
                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-outline-dark">Cadastrar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
