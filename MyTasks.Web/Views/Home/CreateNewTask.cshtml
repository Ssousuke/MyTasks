@model MyTasks.Dto.Dto.MyTasksDto
@using MyTasks.Dto.Dto
@{
    ViewData["Title"] = "Create new task";
}
<div class="container py-5 bg-white text-dark">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <div class="card p-4">
                <div class="card-body">
                    <h2 class="text-center mb-4"><i class="fa-solid fa-pen-to-square"></i> Criar nova tarefa</h2>
                    <form  method="post">
                        <div class="form-group mb-3">
                            <label class="form-label">Nome da tarefa</label>
                            <input asp-for="TaskName" class="form-control" placeholder="Insira o nome da tarefa" required>
                            <span asp-validation-for="TaskName" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label class="form-label">Descrição da tarefa</label>
                            <textarea asp-for="TaskDescription" class="form-control" rows="3" placeholder="Insira a descrição da tarefa"></textarea>
                            <span asp-validation-for="TaskDescription" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label class="form-label">Selecione um projeto</label>
                            <select asp-for="ProjectId" asp-items="ViewBag.ProjectId" class="form-control">
                                <option></option>
                            </select>
                            <span asp-validation-for="ProjectId" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <div class="form-check">
                                <input asp-for="IsActive" class="form-check-input">
                                <label asp-for="IsActive" class="form-check-label">Ativo:</label>
                            </div>
                        </div>
                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-outline-dark">Cadastrar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
